<vm:MainViewModel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sampledata="clr-namespace:MyFuelTracker.SampleData"
    xmlns:vm="clr-namespace:MyFuelTracker.Core.ViewModels;assembly=MyFuelTracker.Core">

    <vm:MainViewModel.Summary>
        <vm:SummaryViewModel AvgConsumption="10.5" 
                             MaxConsumption="12.5" 
                             MinConsumption="7.8"/>
    </vm:MainViewModel.Summary>
    <vm:MainViewModel.History>
        <vm:HistoryViewModel>
            <vm:HistoryViewModel.Fillups>
                <sampledata:ObservableFillups>
                    <vm:FillupItemViewModel Date="2013-01-27" Odometer="2750" Price="12.30" Volume="34.32" />
                    <vm:FillupItemViewModel Date="2013-01-14" Odometer="2375" Price="12.45" Volume="39.32" />
                    <vm:FillupItemViewModel Date="2013-01-02" Odometer="2000" Price="12.59" Volume="36.75" />
                </sampledata:ObservableFillups>
            </vm:HistoryViewModel.Fillups>   
        </vm:HistoryViewModel>
    </vm:MainViewModel.History>
</vm:MainViewModel>