        		<RowDefinition Height="Auto"/>
        	</Grid.RowDefinitions>
            
            <toolkit:DatePicker Value="{Binding FillupItemViewModel.Date, Mode=TwoWay}" VerticalAlignment="Top"/>
            <toolkit:PhoneTextBox Text="{Binding FillupItemViewModel.Odometer, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Hint="Odometer" Grid.Row="1" InputScope="Number"/>
            <toolkit:PhoneTextBox Text="{Binding FillupItemViewModel.Volume, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Hint="Volume" Grid.Row="2" InputScope="Number"/>
            <toolkit:PhoneTextBox Text="{Binding FillupItemViewModel.Price, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Hint="Price" Grid.Row="3" InputScope="Number"/>
        	
